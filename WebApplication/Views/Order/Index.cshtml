@model WebApplication.Models.OrderVM

@{
    ViewData["Title"] = "Order";
}

<h4>Informations de Livraison</h4>

<dl class="row">
    <dt class="col">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </dt>
</dl>


<h4>Votre Commande</h4>
<hr />

<dl class="row">
    <dt class="col">Nom</dt>
    <dt class="col">Prix unitaire</dt>
    <dt class="col">Quantité</dt>
    <dt class="col">Prix total</dt>
</dl>

@for (int i = 0; i < Model.DishesName.Count; i++)
{
    <dl class="row">
        <dt class="col">
            @Html.DisplayFor(model => model.DishesName[i])
        </dt>
        <dt class="col">
            @Html.DisplayFor(model => model.DishesUnitePrice[i])
        </dt>
        <dt class="col">
            @Html.DisplayFor(model => model.Quantity[i])
        </dt>
        <dt class="col">
            @Html.DisplayFor(model => model.DishesTotalPrice[i])
        </dt>
    </dl>
}


<div>
    <dl class="row">
        <dt class="col">

        </dt>
        <dt class="col">

        <dt class="col">
        </dt>
        <dt class="col">
            @Html.DisplayFor(model => model.TotalPrice)
        </dt>
    </dl>
    <dl class="row">
        <dt class="col">
        </dt>
        <dt class="col">
        <dt class="col">
        </dt>
        <dt class="col">
            <a asp-controller="Cart" asp-action="Index">Retour au Panier</a>
        </dt>
    </dl>
</div>
