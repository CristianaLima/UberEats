@model WebApplication.Models.AccountVM

@{
    ViewData["Title"] = "AccountDeliveryMan";
    Layout = "~/Views/Shared/_DeliveryManLayout.cshtml";
}

<h1>Informations du compte :</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AccountDeliveryMan">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">E-Mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mot de passe</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nom</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Prénom</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Date de Naissance</label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">N° de Téléphone</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Adresse</label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">NPA</label>
                <input asp-for="NPA" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Ville</label>
                <input asp-for="City" class="form-control" />
            </div>

            <h4>Informations sur le lieu de travail :</h4>
            <div class="form-group">
                <label class="control-label">WorkNPA</label>
                <input asp-for="WorkNPA" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">WorkCity</label>
                <input asp-for="WorkCity" class="form-control" />
            </div>

            <dl class="row">
                <dt class="col">
                    <div class="form-group">
                        <input type="submit" value="Sauvegarder" class="btn btn-primary" />
                    </div>
                </dt>
                <dt class="col">
                    <div class="form-group">
                        <a @Html.ActionLink("Retour", "Index", "DeliveryMan")
                    </div>
                <dt class="col">
                </dt>
                <dt class="col">
                </dt>
            </dl>



        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}