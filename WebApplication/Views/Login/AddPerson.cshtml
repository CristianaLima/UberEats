@model WebApplication.Models.AccountVM

@{
    ViewData["Title"] = "AddPerson";
}

<h1>Créer un compte</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPerson">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">E-Mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mot de passe</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nom</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Prénom</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Date de Naissance</label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">N° de Téléphone</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Adresse</label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">NPA</label>
                <input asp-for="NPA" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Ville</label>
                <input asp-for="City" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Créer un Compte" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}