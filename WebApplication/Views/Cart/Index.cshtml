@model WebApplication.Models.CartVM

@{
    ViewData["Title"] = "Cart";
}


<h1>Panier</h1>
<hr />

<dl class="row">
    <dt class="col">Nom</dt>
    <dt class="col">Prix unitaire</dt>
    <dt class="col">Quantité</dt>
    <dt class="col">Prix total</dt>
</dl>

@for (int i = 0; i < Model.DishesName.Count; i++)
{
    <dl class="row">
        <dt class="col">
            @Html.DisplayFor(model => model.DishesName[i])
        </dt>
        <dt class="col">
            @Html.DisplayFor(model => model.DishesUnitePrice[i])
        </dt>
        <dt class="col">
            @Html.ActionLink("<=", "Less", "Cart", new { id = Model.DishesId[i] }, null)
            @Html.DisplayFor(model => model.Quantity[i])
            @Html.ActionLink("=>", "More", "Cart", new { id = Model.DishesId[i] }, null)
        </dt>
        <dt class="col">
            @Html.DisplayFor(model => model.DishesTotalPrice[i])
            @Html.ActionLink("  X", "Remove", "Cart", new { id = Model.DishesId[i] }, null)
        </dt>
    </dl>
    }

    
